{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
    "baseUrl": ".",
    "pretty": true,
    "types": ["node", "jest"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "tests/*": ["./tests/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "files": ["src/index.ts", "src/global.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.html", "src/**/*.css", "src/global.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "build",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
